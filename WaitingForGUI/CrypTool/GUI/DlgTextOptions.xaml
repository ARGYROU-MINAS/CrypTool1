		<Button Height="23" HorizontalAlignment="Right" Margin="0,454,199,0" Name="buttonDefault" VerticalAlignment="Top" Width="150" Click="ButtonDefault_OnClick">Standard wiederherstellen</Button>
		<Button Height="23" HorizontalAlignment="Left" Margin="426,455,0,0" Name="buttonCancel" VerticalAlignment="Top" Width="100" Click="ButtonCancel_OnClick">Abbrechen</Button>
		<Button Height="23" HorizontalAlignment="Left" Margin="12,455,0,0" Name="buttonApply" VerticalAlignment="Top" Width="100" Click="ButtonApply_OnClick">Übernehmen</Button>
