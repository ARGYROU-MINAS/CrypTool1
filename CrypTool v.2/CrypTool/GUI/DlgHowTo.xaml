<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2006" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="CrypTool.DlgHowTo"
    Title="Wie Sie starten" Height="385" Width="480" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen"
    Icon="images\idr_main.ico">
  <Window.Resources>
    <XmlDataProvider x:Key="Lang" Source="/lng/english.xml" XPath="CrypTool"/>
  </Window.Resources>
  <Window.Background>
    <ImageBrush
      TileMode="Tile"
      Viewport="0,0,200,200"
      ViewportUnits="Absolute"
      ImageSource="images\brushed.jpg"
      />
  </Window.Background>
  <Grid>
<Grid.Background >
  <LinearGradientBrush
  StartPoint="0,0"
  EndPoint="1,0">
    <LinearGradientBrush.GradientStops>
      <GradientStop Color="#50A9A9A9" Offset="0"/>
      <GradientStop Color="#70FFFFFF" Offset="0.4" />
      <GradientStop Color="#70FFFFFF" Offset="0.6" />
      <GradientStop Color="#50A9A9A9" Offset="1" />
    </LinearGradientBrush.GradientStops>
  </LinearGradientBrush>
</Grid.Background>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="0*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <TextBlock RenderTransformOrigin="0.5,0.5" d:LayoutOverrides="VerticalAlignment" Margin="39,8,8,287.077" FontSize="44" FontWeight="Bold" TextWrapping="Wrap" Visibility="Visible" OverridesDefaultStyle="False" Background="{x:Null}" Foreground="#FF000000" IsHyphenationEnabled="False" Grid.Column="1">
      <TextBlock.RenderTransform>
      	<TransformGroup>
      		<ScaleTransform ScaleX="1" ScaleY="1"/>
      		<SkewTransform AngleX="0" AngleY="0"/>
      		<RotateTransform Angle="0"/>
      		<TranslateTransform X="0" Y="0"/>
      	</TransformGroup>
      </TextBlock.RenderTransform>
    	<Run Language="de-de">rypTool - HowTo ...</Run>
    </TextBlock>
    <Button Click="ButtonClose_OnClick" HorizontalAlignment="Right" Margin="0,0,8,8" x:Name="buttonClose" VerticalAlignment="Bottom" Width="111" Height="30" Content="{Binding Source={StaticResource Lang}, XPath=Buttons/ButtonClose/@Header}" Grid.Column="1" Background="{x:Null}" Foreground="#FF000000"/>
    <CheckBox Grid.Column="1" Height="18.106" Margin="8,0,132.93,13.947" Name="checkBoxShowAgain" VerticalAlignment="Bottom" Content="{Binding Source={StaticResource Lang}, XPath=Labels/DontShowDialogAgain/@Header}" Foreground="#FF000000" />
  	<TextBlock RenderTransformOrigin="0.5,0.5" d:LayoutOverrides="Height" HorizontalAlignment="Left" Margin="4,8.683,0,0" VerticalAlignment="Top" Width="Auto" Height="Auto" Grid.Column="1" FontSize="45" FontWeight="Bold" Foreground="#FF000000" Text="C" TextWrapping="Wrap">
  		<TextBlock.RenderTransform>
  			<TransformGroup>
  				<ScaleTransform ScaleX="1" ScaleY="1"/>
  				<SkewTransform AngleX="0" AngleY="0"/>
  				<RotateTransform Angle="-30"/>
  				<TranslateTransform X="0" Y="0"/>
  			</TransformGroup>
  		</TextBlock.RenderTransform>
  	</TextBlock>
    <TextBlock FontSize="18" Margin="15,81.922,15,52" Background="{x:Null}" Grid.Column="1" TextWrapping="Wrap" Text="{Binding Source={StaticResource Lang}, XPath=Text/HowTo}">
  </TextBlock>
  	<Border RenderTransformOrigin="0.5,0.5" Margin="8,75.922,8,42" Grid.Column="1" Background="{x:Null}" BorderBrush="#FF000000" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5">
  		<Border.RenderTransform>
  			<TransformGroup>
  				<ScaleTransform ScaleX="1" ScaleY="1"/>
  				<SkewTransform AngleX="0" AngleY="0"/>
  				<RotateTransform Angle="0"/>
  				<TranslateTransform X="0" Y="0"/>
  			</TransformGroup>
  		</Border.RenderTransform>
  	</Border>
  </Grid>
</Window>
