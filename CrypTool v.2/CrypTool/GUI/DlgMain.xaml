        <!--<Separator/>-->
        <TreeViewItem Name="MenuItemBarChart" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemBarChart/@Header}" IsEnabled="False"/>
        <!--<Separator/>-->
        <TreeViewItem Name="MenuItemAlphabet" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemAlphabet/@Header}" Selected="setAlphabetHighLight"/>
        <TreeViewItem Name="MenuItemEndOfLine" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemEndOfLine/@Header}" Selected="showEndOfLine"/>
        <TreeViewItem Name="MenuItemLineWrap" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemLineWrap/@Header}" Selected="setWordWrap"/>
        <TreeViewItem Name="MenuItemWhitespace" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemWhitespace/@Header}" Selected="setWhiteSpaces"/>
        <TreeViewItem Name="MenuItemFont" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemFont/@Header}">
          <TreeViewItem FontSize="10" FontFamily="Arial" Name="MenuItemFontArial8" Header="Arial 8" Selected="setFontArial8"/>
