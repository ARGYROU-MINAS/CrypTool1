        <TreeViewItem Name="MenuItemProtocols" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemProtocols/@Header}" IsEnabled="False"/>
        <TreeViewItem Name="MenuItemChineseRemTheoApp" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemChineseRemTheoApp/@Header}" IsEnabled="False"/>
