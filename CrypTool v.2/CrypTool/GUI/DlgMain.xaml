          <TreeViewItem Name="MenuItemHashValueFile" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemHashValueFile/@Header}" IsEnabled="False"/>
          <TreeViewItem Name="MenuItemHashDemo" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemHashDemo/@Header}" IsEnabled="False"/>
          <TreeViewItem Name="MenuItemKeyGenFromPass" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemKeyGenFromPass/@Header}" IsEnabled="False"/>
          <TreeViewItem Name="MenuItemGenMac" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemGenMac/@Header}" IsEnabled="False"/>
