        <TreeViewItem Name="MenuItemCompress" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemCompress/@Header}" IsEnabled="False"/>
        <TreeViewItem Name="MenuItemGenRandNum" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemGenRandNum/@Header}" IsEnabled="False"/>
            <!--<Separator/>-->
