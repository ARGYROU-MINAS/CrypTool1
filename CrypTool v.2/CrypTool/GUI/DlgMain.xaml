        <TreeViewItem Name="MenuItemNew" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemNew/@Header}"  Selected="MenuItemNew_OnClick"/>
        <TreeViewItem Name="MenuItemOpen" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemOpen/@Header}" Selected="MenuItemOpen_OnClick"/>
        <TreeViewItem Name="MenuItemClose" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemClose/@Header}" Selected="MenuItemClose_OnClick"/>
        <TreeViewItem Name="MenuItemCloseAll" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemCloseAll/@Header}" Selected="MenuItemCloseAll_OnClick"/>
        <TreeViewItem Name="MenuItemSave" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemSave/@Header}" Selected="MenuItemSave_OnClick"/>
        <TreeViewItem Name="MenuItemSaveAs" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemSaveAs/@Header}" Selected="MenuItemSaveAs_OnClick"/>
        <!--<Separator/>-->
        <TreeViewItem Name="MenuItemDocProperties" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemDocProperties/@Header}" Selected="ShowDlgDocPrefs"/>
        <TreeViewItem Name="MenuItemDocSetup" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemDocSetup/@Header}" Selected="DocSetup"/>
        <TreeViewItem Name="MenuItemPrint" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemPrint/@Header}" Selected="PrintDialog"/>
        <TreeViewItem Name="MenuItemPrintPreview" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemPrintPreview/@Header}" Selected="PrintDialogPreview"/>
        <!--<Separator/>-->
        <TreeViewItem Name="MenuItemOpenFileHistory" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemOpenFileHistory/@Header}">
          
        </TreeViewItem>
        <TreeViewItem Name="MenuItemQuit" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemQuit/@Header}" Selected="CloseDlgMain"/>
      </TreeViewItem>
      <TreeViewItem FontWeight="Bold" Name="MenuItemEdit" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemEdit/@Header}">
        <TreeViewItem Name="MenuItemUndo" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemUndo/@Header}" Selected="doUndo"/>
        <TreeViewItem Name="MenuItemRedo" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemRedo/@Header}" Selected="doRedo"/>
        <!--<Separator/>-->
        <TreeViewItem Name="MenuItemCut" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemCut/@Header}" Selected="doCut"/>
        <TreeViewItem Name="MenuItemCopy" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemCopy/@Header}" Selected="doCopy"/>
        <TreeViewItem Name="MenuItemPaste" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemPaste/@Header}" Selected="doPaste"/>
