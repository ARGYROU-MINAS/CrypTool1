          </TreeViewItem>
      <TreeViewItem FontWeight="Bold" Name="MenuItemAnalysis" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemAnalysis/@Header}">
        <TreeViewItem Name="MenuItemToolsForAnalysis" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemToolsForAnalysis/@Header}" IsEnabled="False"/>
            <!--<Separator/>-->
