        <!--<Separator/>-->
        <TreeViewItem Name="MenuItemFindReplace" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemFindReplace/@Header}" Selected="showDialogFindReplace"/>
        <TreeViewItem Name="MenuItemFindNext" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemFindNext/@Header}" Selected="findNext"/>
        <!--<Separator/>-->
        <TreeViewItem Name="MenuItemSelAll" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemSelAll/@Header}" Selected="doSelectAll"/>
        <!--<Separator/>-->
        <TreeViewItem Name="MenuItemShowKey" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemShowKey/@Header}" Selected="showKeyDialog"/>
        <TreeViewItem Name="MenuItemParentWindow" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemParentWindow/@Header}" IsEnabled="False"/>
      </TreeViewItem>
      <TreeViewItem FontWeight="Bold" Name="MenuItemView" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemView/@Header}">
        <TreeViewItem Name="MenuItemToolbar" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemToolbar/@Header}" IsEnabled="False"/>
