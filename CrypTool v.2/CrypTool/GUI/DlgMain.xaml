        <TreeViewItem Name="MenuItemSignDocument" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemSignDocument/@Header}" IsEnabled="False"/>
        <TreeViewItem Name="MenuItemVerfiySignature" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemVerifySignature/@Header}" IsEnabled="False"/>
        <TreeViewItem Name="MenuItemExtractSignature" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemExtractSignature/@Header}" IsEnabled="False"/>
        <TreeViewItem Name="MenuItemSignatureDemo" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemSignatureDemo/@Header}" IsEnabled="False"/>
      </TreeViewItem>
      <TreeViewItem FontWeight="Bold" Name="MenuItemIndivPrcedures" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemIndivProcedures/@Header}">
