        <TreeViewItem Name="MenuItemSymmetricEncryptionModern" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemSymmetricEncryptionModern/@Header}" IsEnabled="False"/>
        <TreeViewItem Name="MenuItemAsymmetricEncryption" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemAsymmetricEncryption/@Header}" IsEnabled="False"/>
        <TreeViewItem Name="MenuItemHashAnalyse" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemHash/@Header}" IsEnabled="False"/>
        <TreeViewItem Name="MenuItemAnalyseRandomness" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemAnalyseRandomness/@Header}" IsEnabled="False"/>
          </TreeViewItem>
      <TreeViewItem FontWeight="Bold" Name="MenuItemOptions" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemOptions/@Header}">
        <TreeViewItem Name="MenuItemPlotOptions" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemPlotOptions/@Header}" IsEnabled="False"/>
