          <TreeViewItem Name="MenuItemRSAAESDecryption" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemRSAAESDecryption/@Header}" IsEnabled="False"/>
        </TreeViewItem>
      </TreeViewItem>
      <TreeViewItem FontWeight="Bold" Name="MenuItemDigSignature_PKI" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemDigSignature_PKI/@Header}">
        <TreeViewItem Name="MenuItemPKI" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemPKI/@Header}">
          <TreeViewItem Name="MenuItemKeyGenImport" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemKeyGenImport/@Header}" IsEnabled="False"/>
          <TreeViewItem Name="MenuItemKeyDisplayExport" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemKeyDisplayExport/@Header}" IsEnabled="False"/>
