          <TreeViewItem FontSize="14" FontFamily="Courier" Name="MenuItemFontCourier12" Header="Courier 12" Selected="setFontCourier12"/>
          </TreeViewItem>
        <!--<Separator/>-->
        <TreeViewItem Name="MenuItemShowBox" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemShowBox/@Header}" IsEnabled="False"/>
      </TreeViewItem>
      <TreeViewItem FontWeight="Bold" Name="MenuItemEncryption" Header="{Binding Source={StaticResource Lang}, XPath=MenuItems/MenuItemEncryption/@Header}">
